pipeline{
	agent  any
	tools{
	  maven "maven3.9.9"
	}
	stages{
	  stage('clonefromscm'){
	    steps{
	      sh "echo jenkins is clonefromscm"
	      git branch: 'dec11', url: 'https://github.com/tenbanliontech/liontech-joinedproject.git'
	    }
	  }
      
      stage('build using maven as a tool'){
	    steps{
	      sh "echo 'running Junit test on the source code'"
	      sh "echo 'maven is packaging the source code'"
	      sh "mvn verify"
	      sh "mvn validate"
	      sh "mvn install"
	      sh "mvn clean package"

	    }
	  }stage('code quality analysis'){
	    steps{
	      sh "echo 'perfoming code quality inspection on the application source code'"
	      sh "mvn sibar:sonar"
	    }
	  }
	}
}